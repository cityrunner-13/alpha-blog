<h1 id="title">Sign Up for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>
    <%# Add the "form-horizontal" form to articles %>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-1">
          <%= f.label :username %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-1">
          <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-1">
          <%= f.label :password %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg', id: "form_label" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-3">
      <%= link_to "Cancel request and return to articles", articles_path %>
    </div>
  </div>
</div>
