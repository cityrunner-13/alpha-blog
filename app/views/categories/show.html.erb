<h1 id="title"><%= @category.name.capitalize + " Articles" %></h1>
<div align="center">
  <% if logged_in? and current_user.admin? %>
    <div class="row">
      <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
      <%= link_to "Delete Category",  category_path(@category),
                                          method: :delete,
                                          data: {confirm: "Are you sure you want to delete this category?"},
                                          class: "btn btn-xs btn-danger" %>
      <br><br>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>
