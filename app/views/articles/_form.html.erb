<%# Partial used in article edit and new %>
<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class='col-xs-12'>
    <%# Add the "form-horizontal" form to articles %>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-1">
          <!-- form_for methods to create label -->
          <%= f.label :title %>
        </div>
        <div class="col-sm-6">
          <%# form_for methods to create input field %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-1">
          <%= f.label :description %>
        </div>
        <div class="col-sm-6">
          <%# Input field with custom display %>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-3 col-sm-8">
            <%# form_for methods to create checkboxes for each category %>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <%# Defines checkbox layout for each category %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <!-- form_for methods to create submit button and submit inputs -->
          <%= f.submit class: 'btn btn-primary btn-lg', id: "form_label" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-3">
      <%= link_to "Cancel request and return to articles", articles_path %>
    </div>
  </div>
</div>
